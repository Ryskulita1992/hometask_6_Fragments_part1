<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Result_Share_Fragment"
    android:background="@android:color/background_dark">
    >


    <fragment
        android:layout_marginTop="50dp"
        android:id="@+id/Calc_share_buttons_last_page"
        android:name="kg.geektech.hometask_6_fragments_part1.Calculator_Share_Buttons"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_calculator__share__buttons"
        />
    <TextView
        android:id="@+id/result_text_view_last_page"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@+id/Calc_share_buttons_last_page"
        app:layout_constraintBottom_toTopOf="@+id/result_share_last_page"/>

    <Button
        android:id="@+id/result_share_last_page"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_shape"
        android:text="SHARE"
        app:layout_constraintTop_toBottomOf="@id/Calc_share_buttons_last_page"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="120dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="110dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>